<h2>Hosts</h2>

<fieldset class="fieldset">
  <legend> <%= pluralize(Host.count, 'Host')%> listed</legend>

<table class="sortable">
  <tr>
    <th width="30%">Name</th>
    <th width="30%">Alias</th>
    <th width="20%">#Stages</th>
    <th width="20%">#Roles</th>
  </tr>
  <% for host in @hosts %>
    <tr class="<%= cycle :even, :odd  %>">
      <td><%= link_to host.name, host %></td>
      <td><%= link_to host.alias_name, host if host.alias_name.present? %></td>
      <td><%= host.stages.count %></td>
      <td><%= host.roles.count %></td>
      <% if current_user.admin? %>
        <td><%= link_to 'Edit', [:edit, host] %></td>
        <td><%= link_to 'Delete', host, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<% content_for(:breadcrumb) do %>
  <%= breadcrumb_box do %>
    <%= link_to "Hosts", hosts_path %>
  <% end %>
<% end %>

<% if current_user.admin? %>
  <br />
  <%= link_to 'New host', new_host_path, :class => 'arrow_link' %>
<% end %>

</fieldset>
